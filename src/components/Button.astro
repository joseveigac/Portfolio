---
// src/components/Button.astro
interface Props {
	href: string;
	variant?: 'primary' | 'secondary' | 'ghost';
	size?: 'sm' | 'md' | 'lg';
	rounded?: 'full' | 'md';
	download?: boolean | string;
	class?: string;
}

const { 
	href, 
	variant = 'primary', 
	size = 'md',
	rounded = 'full',
	download,
	class: className 
} = Astro.props;

const baseStyles = "inline-flex items-center justify-center gap-2 font-semibold transition-all";

const variants = {
	primary: "bg-white text-black hover:scale-105",
	secondary: "border border-neutral-500 text-white hover:bg-white/10 hover:scale-105",
	ghost: "border border-neutral-600 text-white hover:bg-neutral-800"
};

const sizes = {
	sm: "px-4 py-2 text-sm",
	md: "px-6 py-3 text-base",
	lg: "px-8 py-4 text-base"
};

const roundedStyles = {
	full: "rounded-full",
	md: "rounded-md"
};
---

<a 
	href={href} 
	download={download}
	class:list={[baseStyles, variants[variant], sizes[size], roundedStyles[rounded], className]}
>
	<slot />
</a>