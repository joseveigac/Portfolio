---
import ExperienceIcon from "../icons/ExperienceIcon.astro";
import ResourcesIcon from "../icons/ResourcesIcon.astro";
import ProjectsIcon from "../icons/ProjectsIcon.astro";
import ContactIcon from "../icons/ContactIcon.astro";
---

<header class="fixed top-4 left-1/2 -translate-x-1/2 z-50 w-[90%] max-w-2xl">
    <nav class="flex items-center justify-center gap-3 md:gap-2 px-4 md:px-6 py-2.5 md:py-3 bg-neutral-900/80 backdrop-blur-md rounded-full md:rounded-2xl border border-white/10 shadow-lg">
        <a href="/" class="pr-4 md:pr-4">
            <img class="size-8 md:size-10 object-contain" src="/img/Logo.png" alt="Logo"/>
        </a>
        
        <a href="/#projects" class="p-2 md:px-4 md:py-2 rounded-full hover:bg-white/10 transition-colors flex items-center gap-2" title="Projects">
            <ProjectsIcon class="size-5 md:size-4"/>
            <span class="hidden md:inline text-sm">Projects</span>
        </a>
        
        <a href="/#experience" class="p-2 md:px-4 md:py-2 rounded-full hover:bg-white/10 transition-colors flex items-center gap-2" title="Experience">
            <ExperienceIcon class="size-5 md:size-4"/>
            <span class="hidden md:inline text-sm">Experience</span>
        </a>
        
        <a href="/resources" class="p-2 md:px-4 md:py-2 rounded-full hover:bg-white/10 transition-colors flex items-center gap-2" title="Resources">
            <ResourcesIcon class="size-5 md:size-4"/>
            <span class="hidden md:inline text-sm">Resources</span>
        </a>
        
        <a href="/#contact" class="p-2 md:px-5 md:py-2 bg-sky-500 hover:bg-sky-400 rounded-full transition-colors flex items-center gap-2 md:font-medium" title="Contact">
            <ContactIcon class="size-5 md:size-4"/>
            <span class="hidden md:inline text-sm">Contact</span>
        </a>
    </nav>
</header>