---
// A reusable animated infinite horizontal scroll component
// Props allow customization of scroll speed and styling

interface Props {
  speed?: number; // Animation duration in seconds (default: 25)
  className?: string; // Additional classes for the container
}

const { speed = 25, className = "" } = Astro.props;
---

<!-- Logo Scroll Animation -->
<div class={`w-[920px] inline-flex flex-nowrap overflow-hidden py-12
    mask-[linear-gradient(to_right,transparent_0,black_128px,black_calc(100%-128px),transparent_100%)]
    ${className}`}
    style={`--scroll-speed: ${speed}s`}
>
    <ul x-ref="logos" class="flex items-center justify-center md:justify-start [&_li]:mx-8 
    [&_img]:max-w-none animate-infinite-scroll">

        <slot />

	</ul>
    <!-- Duplicate for seamless loop -->
    <ul class="flex items-center justify-center md:justify-start [&_li]:mx-8 
    [&_img]:max-w-none animate-infinite-scroll" aria-hidden="true">

        <slot />

    </ul>
</div>

<style>
  .animate-infinite-scroll {
    animation: infinite-scroll var(--scroll-speed, 25s) linear infinite;
  }
</style>